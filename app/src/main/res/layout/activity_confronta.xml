<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_confronta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dbxprts.terminaltrak.ConfrontaActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:theme="@style/ToolBarStyle"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fecha_label"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:id="@+id/via" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignBaseline="@+id/descripcion_label"
        android:layout_alignBottom="@+id/descripcion_label"
        android:layout_toRightOf="@+id/descripcion_label"
        android:layout_toEndOf="@+id/descripcion_label"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:text="Descripción:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descripcion_label"
        android:textSize="15sp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:text="Fecha\n Inicio:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fecha_label"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/descripcion_label"
        android:layout_alignStart="@+id/descripcion_label" />

    <Button
        android:text="Registrar \n Confronta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:id="@+id/button3"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:text="Abrir\n Cámara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camera"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/numfotos"
        android:layout_alignLeft="@+id/numfotos"
        android:layout_alignStart="@+id/numfotos" />

    <TextView
        android:text="Número de fotos: 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numfotos"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/via"
        android:layout_alignLeft="@+id/fecha_label"
        android:layout_alignStart="@+id/fecha_label" />

</RelativeLayout>
